@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
	<title>Автосалон: Автомобили</title>
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")
	<script src="~/Scripts/mysearch.js"></script>
</head>
<body>
	@{
		ViewBag.Title = "Cars";
	}
	<div class="container">
		<h3>Доступные автомобили</h3>

		@model IEnumerable<WebProject.Models.AbstractModel>

		<input class=form-control id=mysearch onkeyup=mySearch() placeholder="Поиск" type=text>

		<div class="table-responsive">
			<table class="table-bordered" id=mytable>
				<thead>
					<tr>
						<th scope="col">Модель</th>
						<th scope="col">Пробег</th>
						<th scope="col">КПП</th>
						<th scope="col">Двигатель</th>
						<th scope="col">Цена</th>
						<th scope="col">Скидка</th>
						<th scope="col">Изменить</th>
						<th scope="col">Удалить</th>
					</tr>
				</thead>
				<tbody>
					@foreach (WebProject.Models.Car m in Model)
					{
					<tr>
						<th scope="row">@m.Name</th>
						<td>@m.Mileage </td>
						<td>@m.Transmission </td>
						<td>@m.Engine </td>
						<td>@m.Price </td>
						<td>@m.Discount %</td>
						<td><a href="~/Service/EditService/@m.Id"> Изменить</a></td>
						<td><a href="~/Service/DeleteService/@m.Id"> Удалить</a></td>
					</tr>
					}
				</tbody>
			</table>
		</div>
		<input type="button" value="Добавить" onClick='location.href="CreateCar"'>


	</div><br>
</body>
</html>